@model IEnumerable<ProductApplication.Models.Entity.Category>

@{
    ViewData["Title"] = "Category List";
}

<h3>@ViewData["Title"]</h3>
<hr />
<form>
    <button asp-action="Create" asp-controller="Category" class="btn btn-primary mb-3">Create Category</button>
    <table class="table table-responsive table-border table-hover">
        <thead>
            <tr class="table-active">
                <th>
                    @Html.DisplayNameFor(Model => Model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id </td>
                        <td>@category.Name </td>
                        <td>@category.IsActive </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div>
                            No Categories Available
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>